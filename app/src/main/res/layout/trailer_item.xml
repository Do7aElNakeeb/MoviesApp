<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trailerThumbnail"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignTop="@id/trailerThumbnail"
        android:layout_alignLeft="@id/trailerThumbnail"
        android:layout_alignStart="@+id/trailerThumbnail"
        android:layout_alignRight="@id/trailerThumbnail"
        android:layout_alignEnd="@+id/trailerThumbnail"
        android:layout_alignBottom="@id/trailerThumbnail"
        android:id="@+id/trailer_play"
        android:alpha="0.4"
        android:src="@drawable/play_icon"/>

</RelativeLayout>